---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { title, description, pubDate, updatedDate, frontmatter } = Astro.props;

---

<html lang="en">
	<head>
    <BaseHead title={title ?? frontmatter.title} description={description ?? frontmatter.description} />
  </head>
  <body class="text-slate-700">
		<Header />
    <main class="max-w-4xl m-auto py-24 lg:py-48 px-8 font-serif text-slate-700">
      <article class="prose lg:prose-xl prose-headings:font-medium prose-a:hover:text-emerald-600 max-w-full">
        <slot />
      </article>
		</main>
  </body>
</html>
