---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Icon } from 'astro-icon/components'
---

<header>
	<nav class="max-w-4xl m-auto px-8 pt-12">
    <h2><a href="/" class="font-sans text-2xl font-black hover:text-emerald-600 [font-variant:small-caps]">{SITE_TITLE}</a></h2>

    <div class="flex items-center">
      <div class="text-lg mr-8">
        <HeaderLink href="/stories" class="hover:text-emerald-600 mr-4">Stories</HeaderLink>
        <!-- <HeaderLink href="/blog" class="hover:text-emerald-600 mr-4">Blog/news</HeaderLink> -->
        <HeaderLink href="/contact" class="hover:text-emerald-600">Contact me</HeaderLink>
      </div>
      <a class="hover:text-emerald-600 mr-4" href="https://bsky.app/profile/joelhans.bsky.social" target="_blank">
        <span class="sr-only">Follow me on BlueSky</span>
        <Icon name="simple-icons:bluesky"  />
			</a>
      <a class="hover:text-emerald-600" href="https://www.instagram.com/_joelhans/" target="_blank">
        <span class="sr-only">Follow me on Instagram</span>
        <Icon name="simple-icons:instagram" />
			</a>
		</div>
	</nav>
</header>
<style>
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
  }
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
